{
  "name": "avocat-ai-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20 <21"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "db/*",
    "JB/*",
    "francophone-lex/*"
  ],
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "test": "pnpm -r --if-present run test",
    "check:migrations": "node ./scripts/check-migrations.mjs",
    "dev:api": "pnpm --filter @apps/api dev",
    "dev:ops": "pnpm --filter @apps/ops dev",
    "dev:web": "pnpm --filter @avocat-ai/web dev",
    "start": "pnpm --filter @avocat-ai/web start",
    "db:push": "supabase migration up",
    "db:migrate": "npm run migrate --workspace @apps/ops",
    "db:migrate:staging": "npm run migrate --workspace @apps/ops -- --env staging",
    "ops:provision": "npm run provision --workspace @apps/ops",
    "ops:foundation": "npm run foundation --workspace @apps/ops",
    "ops:evaluate": "npm run evaluate --workspace @apps/ops",
    "ops:red-team": "npm run red-team --workspace @apps/ops",
    "ops:perf-snapshot": "npm run perf-snapshot --workspace @apps/ops",
    "ops:transparency": "npm run transparency --workspace @apps/ops",
    "ops:slo": "npm run slo --workspace @apps/ops",
    "ops:learning": "npm run learning --workspace @apps/ops",
    "ops:regulator-digest": "npm run regulator-digest --workspace @apps/ops",
    "ops:go-no-go": "npm run go-no-go --workspace @apps/ops",
    "ops:check": "pnpm env:validate && npm run check --workspace @apps/ops",
    "ops:rotate-secrets": "npm run rotate-secrets --workspace @apps/ops",
    "ops:rls-smoke": "npm run rls-smoke --workspace @apps/ops",
    "ops:phase": "npm run phase --workspace @apps/ops",
    "env:validate": "node ./scripts/validate-env-examples.mjs",
    "seed": "npm run start --workspace @db/seed",
    "seed:compliance-test": "node ./scripts/seed-compliance-test-data.mjs",
    "check:binaries": "node ./scripts/check-binaries.mjs"
  },
  "dependencies": {
    "next-pwa": "^5.6.0"
  },
  "devDependencies": {
    "sql-formatter": "^15.6.10",
    "zod": "^3.25.42"
  }
}
