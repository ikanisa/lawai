###############################################
# Example environment file (non-functional)
# - Values below are placeholders; replace with your own.
# - Never commit real secrets. Rotate any keys that were
#   previously exposed in history or used from examples.
# - Refer to docs/env-matrix.md for canonical guidance on
#   which service owns each variable and how they are loaded.
###############################################

# Runtime defaults
APP_ENV=local
PORT=3000

# OpenAI configuration
# Required secrets: populate with real credentials before running the API.
OPENAI_API_KEY=
AGENT_MODEL=gpt-5-pro
EMBEDDING_MODEL=text-embedding-3-large
SUMMARISER_MODEL=gpt-4o-mini
MAX_SUMMARY_CHARS=12000
AGENT_STUB_MODE=auto
OPENAI_DEBUG_REQUESTS=0
OPENAI_ORGANIZATION=
OPENAI_PROJECT=
OPENAI_REQUEST_TAGS=service=api,component=backend
OPENAI_REQUEST_TAGS_API=service=api,component=backend
OPENAI_REQUEST_TAGS_OPS=service=ops,component=worker
OPENAI_REQUEST_TAGS_EDGE=

# Optional integrations (shared helper handles validation)
OPENAI_CHATKIT_PROJECT=
OPENAI_CHATKIT_SECRET=
OPENAI_CHATKIT_BASE_URL=
OPENAI_CHATKIT_MODEL=
JURIS_ALLOWLIST_JSON=

# WhatsApp OTP (optional; see docs/env-matrix.md)
WA_PROVIDER=meta
WA_TOKEN=
WA_PHONE_NUMBER_ID=
WA_TEMPLATE_OTP_NAME=otp_login
WA_TEMPLATE_LOCALE=fr

# C2PA signing (optional)
C2PA_SIGNING_PRIVATE_KEY=
C2PA_SIGNING_KEY_ID=

# Front-end configuration (web client)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=anon_key_placeholder
NEXT_PUBLIC_DASHBOARD_RUNS_HIGH=1000
NEXT_PUBLIC_DASHBOARD_RUNS_MEDIUM=200
NEXT_PUBLIC_EVAL_PASS_GOOD=0.9
NEXT_PUBLIC_EVAL_PASS_OK=0.75
NEXT_PUBLIC_EVAL_COVERAGE_GOOD=0.9
NEXT_PUBLIC_EVAL_COVERAGE_OK=0.75
NEXT_PUBLIC_EVAL_MAGHREB_GOOD=0.95
NEXT_PUBLIC_EVAL_MAGHREB_OK=0.8
NEXT_PUBLIC_TOOL_FAILURE_WARN=0.02
NEXT_PUBLIC_TOOL_FAILURE_CRIT=0.05

# Supabase configuration (required for local development)
SUPABASE_URL=
SUPABASE_ANON_KEY=anon_key_placeholder
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:5432/postgres
SUPABASE_PROJECT_REF=
SUPABASE_ACCESS_TOKEN=
SUPABASE_MANAGEMENT_API_URL=https://api.supabase.com/v1/projects

# Deployment tooling (optional)
DEPLOY_PREVIEW_TOKEN=

# Allowlist override (optional JSON array of hostnames)
JURIS_ALLOWLIST_JSON=

# WhatsApp OTP (optional)
WA_TOKEN=
WA_PHONE_NUMBER_ID=
WA_TEMPLATE_OTP_NAME=otp_login
WA_TEMPLATE_LOCALE=fr
WA_PROVIDER=meta

# C2PA signing (optional)
C2PA_SIGNING_PRIVATE_KEY=
C2PA_SIGNING_KEY_ID=

# Ops automation defaults
TRANSPARENCY_ORG_ID=00000000-0000-0000-0000-000000000000
TRANSPARENCY_USER_ID=00000000-0000-0000-0000-000000000000
SLO_ORG_ID=00000000-0000-0000-0000-000000000000
SLO_USER_ID=00000000-0000-0000-0000-000000000000
PROVENANCE_STALE_RATIO_THRESHOLD=0.15
PROVENANCE_FAILED_COUNT_THRESHOLD=0

# Alerts (optional)
ALERTS_SLACK_WEBHOOK_URL=
# Optional internal email relay for alerts (expects JSON {subject, body})
ALERTS_EMAIL_WEBHOOK_URL=
# Batch size to trigger quarantine alerts from gdrive-watcher
ALERTS_QUARANTINE_THRESHOLD=5
# Comma-separated list of quarantine reasons that should always alert (even below threshold)
# Defaults (if unset): missing_binding_language,non_allowlisted_domain
ALERTS_QUARANTINE_ALWAYS_REASONS=
# Comma-separated manifest reasons to always alert on (drive-watcher)
# Defaults (if unset): non_allowlisted_domain,missing_binding_language
ALERTS_MANIFEST_ALWAYS_REASONS=
# Minimum number of flagged entries to trigger a manifest alert
ALERTS_MANIFEST_THRESHOLD=1
