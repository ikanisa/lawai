{
  "openapi": "3.1.0",
  "info": {
    "title": "Avocat API",
    "version": "1.0.0",
    "description": "Programmatic interface for the Avocat workspace and agents."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local development"
    }
  ],
  "components": {
    "schemas": {
      "HttpErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Machine-readable error code"
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message"
          },
          "details": {
            "description": "Additional context for debugging"
          }
        },
        "required": [
          "error"
        ],
        "description": "Standard error response envelope"
      },
      "WorkspaceJurisdiction": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Jurisdiction code"
          },
          "name": {
            "type": "string",
            "description": "Jurisdiction name"
          },
          "eu": {
            "type": "boolean",
            "description": "Whether the jurisdiction is part of the EU"
          },
          "ohada": {
            "type": "boolean",
            "description": "Whether the jurisdiction is part of OHADA"
          },
          "matterCount": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of matters associated with the jurisdiction"
          }
        },
        "required": [
          "code",
          "name",
          "eu",
          "ohada",
          "matterCount"
        ],
        "description": "Jurisdiction summary with matter counts"
      },
      "WorkspaceMatter": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "status": {
            "type": [
              "string",
              "null"
            ]
          },
          "riskLevel": {
            "type": [
              "string",
              "null"
            ]
          },
          "hitlRequired": {
            "type": [
              "boolean",
              "null"
            ]
          },
          "startedAt": {
            "type": [
              "string",
              "null"
            ]
          },
          "finishedAt": {
            "type": [
              "string",
              "null"
            ]
          },
          "jurisdiction": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "question",
          "status",
          "riskLevel",
          "hitlRequired",
          "startedAt",
          "finishedAt",
          "jurisdiction"
        ],
        "description": "Workspace matter overview"
      },
      "WorkspaceComplianceWatch": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "publisher": {
            "type": [
              "string",
              "null"
            ]
          },
          "url": {
            "type": "string"
          },
          "jurisdiction": {
            "type": [
              "string",
              "null"
            ]
          },
          "consolidated": {
            "type": [
              "boolean",
              "null"
            ]
          },
          "effectiveDate": {
            "type": [
              "string",
              "null"
            ]
          },
          "createdAt": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "title",
          "publisher",
          "url",
          "jurisdiction",
          "consolidated",
          "effectiveDate",
          "createdAt"
        ],
        "description": "Compliance watch entry"
      },
      "WorkspaceHitlInboxItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "runId": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "createdAt": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "runId",
          "reason",
          "status",
          "createdAt"
        ],
        "description": "HITL inbox item"
      },
      "WorkspaceHitlInbox": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceHitlInboxItem"
            }
          },
          "pendingCount": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "items",
          "pendingCount"
        ],
        "description": "HITL inbox summary"
      },
      "WorkspaceDeskPlaybookStep": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "success",
              "skipped",
              "failed"
            ]
          },
          "attempts": {
            "type": "integer",
            "minimum": 0
          },
          "detail": {
            "type": [
              "object",
              "null"
            ],
            "additionalProperties": {}
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "status",
          "attempts"
        ],
        "description": "Step within a workspace playbook"
      },
      "WorkspaceDeskPlaybook": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "persona": {
            "type": "string"
          },
          "jurisdiction": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ask",
              "do",
              "review",
              "generate"
            ]
          },
          "summary": {
            "type": "string"
          },
          "regulatoryFocus": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "steps": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceDeskPlaybookStep"
            }
          },
          "cta": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "question": {
                "type": "string"
              },
              "mode": {
                "type": "string",
                "enum": [
                  "ask",
                  "do",
                  "review",
                  "generate"
                ]
              }
            },
            "required": [
              "label",
              "mode"
            ]
          }
        },
        "required": [
          "id",
          "title",
          "persona",
          "jurisdiction",
          "mode",
          "summary",
          "regulatoryFocus",
          "steps",
          "cta"
        ],
        "description": "Workspace playbook configuration"
      },
      "WorkspaceDeskQuickAction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ask",
              "do",
              "review",
              "generate"
            ]
          },
          "action": {
            "type": "string",
            "enum": [
              "navigate",
              "plan",
              "trust",
              "hitl"
            ]
          },
          "href": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "label",
          "description",
          "mode",
          "action"
        ],
        "description": "Quick action available from the workspace desk"
      },
      "WorkspaceDeskPersona": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ask",
              "do",
              "review",
              "generate"
            ]
          },
          "focusAreas": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "guardrails": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "href": {
            "type": "string"
          },
          "agentCode": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "label",
          "description",
          "mode",
          "focusAreas",
          "guardrails",
          "href",
          "agentCode"
        ],
        "description": "Persona represented on the workspace desk"
      },
      "WorkspaceDeskToolChip": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ask",
              "do",
              "review",
              "generate"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "ready",
              "monitoring",
              "requires_hitl"
            ]
          },
          "description": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "navigate",
              "plan",
              "trust",
              "hitl"
            ]
          },
          "href": {
            "type": "string"
          },
          "ctaLabel": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "label",
          "mode",
          "status",
          "description",
          "action",
          "ctaLabel"
        ],
        "description": "Tool chip rendered on the workspace desk"
      },
      "WorkspaceDesk": {
        "type": "object",
        "properties": {
          "playbooks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceDeskPlaybook"
            }
          },
          "quickActions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceDeskQuickAction"
            }
          },
          "personas": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceDeskPersona"
            }
          },
          "toolChips": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceDeskToolChip"
            }
          }
        },
        "required": [
          "playbooks",
          "quickActions",
          "personas",
          "toolChips"
        ],
        "description": "Workspace desk configuration"
      },
      "WorkspaceNavigatorStep": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "state": {
            "type": "string",
            "enum": [
              "complete",
              "in_progress",
              "blocked"
            ]
          },
          "guardrails": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "escalation": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "label",
          "description",
          "state",
          "guardrails",
          "outputs"
        ],
        "description": "Navigator flow step"
      },
      "WorkspaceNavigatorTelemetry": {
        "type": "object",
        "properties": {
          "runCount": {
            "type": "integer",
            "minimum": 0
          },
          "hitlEscalations": {
            "type": "integer",
            "minimum": 0
          },
          "pendingTasks": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "runCount",
          "hitlEscalations",
          "pendingTasks"
        ],
        "description": "Navigator telemetry snapshot"
      },
      "WorkspaceNavigatorFlow": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "jurisdiction": {
            "type": "string"
          },
          "persona": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ask",
              "do",
              "review",
              "generate"
            ]
          },
          "summary": {
            "type": "string"
          },
          "estimatedMinutes": {
            "type": "integer",
            "minimum": 0
          },
          "lastRunAt": {
            "type": [
              "string",
              "null"
            ]
          },
          "alerts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "telemetry": {
            "$ref": "#/components/schemas/WorkspaceNavigatorTelemetry"
          },
          "steps": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceNavigatorStep"
            }
          }
        },
        "required": [
          "id",
          "title",
          "jurisdiction",
          "persona",
          "mode",
          "summary",
          "estimatedMinutes",
          "lastRunAt",
          "alerts",
          "telemetry",
          "steps"
        ],
        "description": "Navigator flow definition"
      },
      "WorkspaceMeta": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "ok",
              "partial"
            ]
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "errors": {
            "type": "object",
            "additionalProperties": {}
          }
        },
        "required": [
          "status",
          "warnings"
        ],
        "description": "Metadata about the workspace response completeness"
      },
      "WorkspaceOverview": {
        "type": "object",
        "properties": {
          "jurisdictions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceJurisdiction"
            }
          },
          "matters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceMatter"
            }
          },
          "complianceWatch": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceComplianceWatch"
            }
          },
          "hitlInbox": {
            "$ref": "#/components/schemas/WorkspaceHitlInbox"
          },
          "desk": {
            "$ref": "#/components/schemas/WorkspaceDesk"
          },
          "navigator": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkspaceNavigatorFlow"
            }
          }
        },
        "required": [
          "jurisdictions",
          "matters",
          "complianceWatch",
          "hitlInbox",
          "desk",
          "navigator"
        ],
        "description": "Workspace overview payload"
      },
      "WorkspaceQuery": {
        "type": "object",
        "properties": {
          "orgId": {
            "type": "string",
            "format": "uuid",
            "description": "Workspace organisation identifier"
          }
        },
        "required": [
          "orgId"
        ]
      },
      "WorkspaceHeaders": {
        "type": "object",
        "properties": {
          "x-user-id": {
            "type": "string",
            "minLength": 1,
            "description": "Identifier of the authenticated user"
          }
        },
        "required": [
          "x-user-id"
        ]
      },
      "WorkspaceResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/WorkspaceOverview"
          },
          {
            "type": "object",
            "properties": {
              "meta": {
                "$ref": "#/components/schemas/WorkspaceMeta"
              }
            },
            "required": [
              "meta"
            ]
          }
        ],
        "description": "Workspace overview payload"
      }
    },
    "parameters": {}
  },
  "paths": {
    "/workspace": {
      "get": {
        "tags": [
          "Workspace"
        ],
        "summary": "Fetch the workspace overview for an organisation",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid",
              "description": "Workspace organisation identifier"
            },
            "required": true,
            "description": "Workspace organisation identifier",
            "name": "orgId",
            "in": "query"
          },
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "description": "Identifier of the authenticated user"
            },
            "required": true,
            "description": "Identifier of the authenticated user",
            "name": "x-user-id",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Workspace overview response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WorkspaceResponse"
                }
              }
            }
          },
          "206": {
            "description": "Partial workspace overview with warnings",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WorkspaceResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Insufficient permissions to view the workspace",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "webhooks": {}
}
